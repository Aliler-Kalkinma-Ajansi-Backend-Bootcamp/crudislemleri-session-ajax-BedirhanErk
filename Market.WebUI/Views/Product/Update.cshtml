@model Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Product</h1>
<hr />
<form asp-controller="Product" asp-action="Update" method="post">
    <div class="mb-3">
        <input type="hidden" name="productId" value="@Model.Id" />
        <label class="form-label">Product Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" asp-for="Descriprion"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Image</label>
        <input class="form-control" asp-for="Image">
    </div>
    <button type="submit" value="Create" class="btn btn-primary">Update</button>
</form>

